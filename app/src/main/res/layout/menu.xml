<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="260dp"
    android:background="@drawable/back2">

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/workoutbtn"
        android:background="@drawable/btn1"
        android:onClick="workoutClicked"
        android:layout_marginTop="20dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/motivationbtn"
        android:background="@drawable/btn4"
        android:onClick="motivationClicked"
        android:layout_marginTop="20dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/junkbtn"
        android:background="@drawable/btn2"
        android:onClick="junkClicked"
        android:layout_marginTop="20dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/resultbtn"
        android:background="@drawable/btn3"
        android:onClick="resultClicked"
        android:layout_marginTop="20dp"
        />

</LinearLayout>